<?xml version="1.0" encoding="UTF-8"?>
<glassfish-ejb-jar>
    <enterprise-beans>
        <!-- Настройка пула для VehicleServiceImpl -->
        <ejb>
            <ejb-name>VehicleServiceImpl</ejb-name>
            <bean-pool>
                <steady-pool-size>5</steady-pool-size>
                <resize-quantity>5</resize-quantity>
                <max-pool-size>50</max-pool-size>
                <pool-idle-timeout-in-seconds>300</pool-idle-timeout-in-seconds>
            </bean-pool>
        </ejb>
        
        <!-- Настройка пула для VehicleRepository -->
        <ejb>
            <ejb-name>VehicleRepository</ejb-name>
            <bean-pool>
                <steady-pool-size>5</steady-pool-size>
                <resize-quantity>5</resize-quantity>
                <max-pool-size>50</max-pool-size>
                <pool-idle-timeout-in-seconds>300</pool-idle-timeout-in-seconds>
            </bean-pool>
        </ejb>
        
        <!-- Настройка пула для HelloServiceImpl -->
        <ejb>
            <ejb-name>HelloServiceImpl</ejb-name>
            <bean-pool>
                <steady-pool-size>2</steady-pool-size>
                <resize-quantity>1</resize-quantity>
                <max-pool-size>10</max-pool-size>
                <pool-idle-timeout-in-seconds>300</pool-idle-timeout-in-seconds>
            </bean-pool>
        </ejb>
    </enterprise-beans>
</glassfish-ejb-jar>

